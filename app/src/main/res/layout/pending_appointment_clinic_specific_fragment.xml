<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acceptdenyappointment.PendingAppointmentClinicSpecificFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/clinic_empty_gif"
            android:layout_width="307dp"
            android:layout_height="307dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/empty_gif"
            android:visibility="gone" />


        <TextView
            android:id="@+id/clinic_not_found_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No appointments were accepted! Come Back Later!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/category_list_progress_bar"
            style="@style/default_progress_bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRVCoursePendingAppointmentClinicSpecific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>