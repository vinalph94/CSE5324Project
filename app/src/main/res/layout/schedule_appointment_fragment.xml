<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment.ScheduleAppointmentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-60dp">


        <TextView
            android:id="@+id/docName"
            android:layout_width="304dp"
            android:layout_height="45dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/img"
            android:paddingLeft="15px"
            android:paddingTop="30px"
            android:textColor="#408E9B"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/docDetails"
            android:layout_width="304dp"
            android:layout_height="30dp"
            android:layout_below="@id/docName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/img"
            android:paddingLeft="30px"
            android:paddingTop="15px"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/docSpecialist"
            android:layout_width="304dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/docDetails"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="-32dp"
            android:background="@drawable/img"
            android:paddingLeft="30px"
            android:paddingTop="15px"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/workTime"
            android:layout_width="304dp"
            android:layout_height="45dp"
            android:layout_below="@id/docDetails"
            android:layout_marginStart="20dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="50dp"
            android:text="  Working Time"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workTimeDetails"
            android:layout_width="304dp"
            android:layout_height="45dp"
            android:layout_below="@id/workTime"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:text="  Mon-Fri 10.00 AM-10.00PM"
            android:textColor="@color/white"
            android:textSize="11.5dp" />


        <TextView
            android:id="@+id/appointment"
            android:layout_width="304dp"
            android:layout_height="45dp"
            android:layout_below="@id/workTimeDetails"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:text="  Make Appointment"
            android:textColor="@color/white"
            android:textSize="15dp"

            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="335dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previousWeekAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="previousWeekAction"
                android:text="@string/back"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monthYearTV"
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:layout_weight="2"
                android:text="Nov 2022"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/nextWeekAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="nextWeekAction"
                android:text="@string/forward"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="405dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SUN"
                android:textAlignment="center"
                android:textColor="#408E9B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MON"
                android:textAlignment="center"
                android:textColor="#408E9B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TUE"
                android:textAlignment="center"
                android:textColor="#408E9B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WED"
                android:textAlignment="center"
                android:textColor="#408E9B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="THUR"
                android:textAlignment="center"
                android:textColor="#408E9B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FRI"
                android:textAlignment="center"
                android:textColor="#408E9B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SAT"
                android:textAlignment="center"
                android:textColor="#408E9B"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="445dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendarRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#252525" />


        </LinearLayout>

        <Button
            android:id="@+id/bookAptBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="515dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_rectangle_bg"
            android:backgroundTint="#A9CACF"
            android:onClick="bookTimeSlotAction"
            android:padding="10dp"
            android:text="Book Appointment"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

