<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetpassword.SuccessfulResetPassword">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/forget_pwd_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="139dp"
                android:layout_height="137dp"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/MediAssistView"
                android:layout_width="400dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="190dp"
                android:fontFamily="Inter"
                android:lineHeight="36sp"
                android:text="MediAssist"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/CongratsView"
                android:layout_width="400dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="220dp"
                android:fontFamily="Inter"
                android:lineHeight="36sp"
                android:text="Congrats!"
                android:textColor="#408E9B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ReadyView"
                android:layout_width="400dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="250dp"
                android:fontFamily="Inter"
                android:lineHeight="24sp"
                android:text="Your account is ready to use."
                android:textColor="#408E9B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/HomePageButtonView"
                style="@style/default_disabled_button"
                android:layout_width="240dp"
                android:layout_height="51dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="500dp"
                android:text="Home Page"
                android:textColor="@color/white" />
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>