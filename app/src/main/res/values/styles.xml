<?xml version="1.0" encoding="utf-8" ?>

<resources>

    <style name="default_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">22dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:height">60dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:minWidth">250dp</item>
    </style>

    <style name="default_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="backgroundTint">@color/disabled_color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:minWidth">350dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/default_edit_text</item>
        <item name="android:fontWeight">600</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
    </style>

    <style name="default_error_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="backgroundTint">@color/secondary_error_color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:minWidth">350dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/default_edit_text</item>
        <item name="android:fontWeight">600</item>
        <item name="android:drawableLeft">@drawable/warning_sign</item>item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/error_text_color</item>


    </style>

    <style name="default_label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:fontWeight">600</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="mandatory_label_text" parent="@style/default_label_text">
        <item name="android:drawableRight">@drawable/asterisk</item>item>
    </style>

    <style name="default_disabled_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/disabled_color</item>
        <item name="cornerRadius">22dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:height">60dp</item>
        <item name="backgroundTint">@color/disabled_primary_color</item>
        <item name="android:minWidth">350dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="default_progress_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="dashboard_card">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="cardBackgroundColor">@color/disabled_primary_color</item>
        <item name="cardElevation">100dp</item>
    </style>

    <style name="doctor_specialist_card">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/disabled_primary_color</item>
        <item name="cardElevation">100dp</item>
    </style>

    <style name="dashboard_menu_image_view">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="dashboard_specialist_menu_image_view">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">30dp</item>

    </style>

    <style name="dashboard_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_vertical</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="appbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Theme.MediAssist.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="spinner_menu">
        <item name="android:padding">8dp</item>
        <item name="android:colorBackground">@color/disabled_color</item>
        <item name="android:radius">10dp</item>
        <item name="minWidth">370dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>
</resources>