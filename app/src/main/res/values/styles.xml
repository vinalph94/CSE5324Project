<?xml version="1.0" encoding="utf-8" ?>

<resources>

    <style name="default_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">22dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:height">60dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:minWidth">250dp</item>
    </style>

    <style name="disabled_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/disabled_color</item>
        <item name="cornerRadius">22dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:height">60dp</item>
        <item name="backgroundTint">@color/disabled_color</item>
        <item name="android:minWidth">250dp</item>
    </style>

    <style name="appbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>